---
import Layout from '../layouts/main.astro';
import { SignIn } from '@clerk/astro/components';

const title = 'Sign In - ASIMOV.Systems';
const description = 'Sign in to your ASIMOV account';

// Get return URL if provided, otherwise redirect to home after sign in
const returnUrl = Astro.url.searchParams.get('returnUrl') || '/';
---

<Layout title={title} description={description}>
  <div class="flex min-h-screen items-center justify-center bg-white px-4 py-16">
    <div class="w-full max-w-md">
      <div class="mb-8 text-center">
        <h1 class="mb-2 text-4xl font-bold text-black">Welcome Back</h1>
        <p class="text-slate-600">Sign in to your ASIMOV account</p>
      </div>
      <SignIn afterSignInUrl={returnUrl} redirectUrl={returnUrl} />
    </div>
  </div>
</Layout>
